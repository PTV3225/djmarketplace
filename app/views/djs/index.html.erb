
<!-- app/views/djs/index.html.erb -->

<%= content_for :banner %>
<div style="background-image: url('<%= asset_path('sampleDjImages/banner.jpg') %>'); background-size: cover; background-repeat: no-repeat; height: 300px; display: flex; align-items: center; justify-content: center;">
  <h1 class="text-center text-light display-4"> Pimp Yo DJ </h1>
</div>

<!-- PG SEARCH form -->
<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: djs_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="container mt-4">
  <div class="row row-cols-1 row-cols-md-4 g-4">
    <% @djs.each do |dj| %>
      <div class="col">
        <div class="card h-100" style="width: 100%;">
          <% if dj.photo.attached? %>
            <%= image_tag dj.photo, class: 'card-img-index' %>
          <% else %>
            <p>No photo available.</p>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= dj.name %></h5>
            <p class="card-text"><%= "Genre: #{dj.genre.category}" %></p>
            <p class="card-text"><%= "Rate (per hour): $#{dj.rate}"%></p>
            <% if dj.description.length > 100 %>
              <p class="card-text"><%= "Description: #{dj.description[0..100]}..." %></p>
            <% else %>
              <p class="card-text"><%= "Description: #{dj.description}" %></p>
            <% end %>
            <p class="card-text"><%= "Location: #{dj.location}" %></p>
            <a href="<%= dj_path(dj) %>" class="btn btn-primary">Check out more</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

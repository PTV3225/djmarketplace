<!-- app/views/djs/index.html.erb -->

<%= content_for :banner %>
<div style="background-image: url('<%= asset_path('sampleDjImages/banner.jpg') %>'); background-size: cover; background-repeat: no-repeat; height: 300px;">
  <!-- Banner content, if any -->

  <h1 class="text-center"> Pimp My Dj </h1>
</div>





<% @djs.each do |dj| %>
  <li>
    <%= link_to dj.name, dj_path(dj) %>
    <%= dj.genre.category %>
    <%= dj.rate %>
    <%= dj.description %>
    <% if dj.photo.attached? %>
      <%= image_tag dj.photo, class: 'dj-photo' %>
    <% else %>
      <p>No photo available.</p>
    <% end %>
  </li>
<% end %>

<!-- Rest of the index page content -->

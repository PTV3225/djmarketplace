<style>
<style>
  /* Styles specifically for the booking_request partial */
  .booking-request-card {
    width: 300px;
    background-color: #f0f0f0;
    padding: 10px;
    border-radius: 5px;
    /* Add any other styles specific to the booking_request here */
  }

  .booking-request-card .card-body {
    display: flex;
    justify-content: space-between;
    /* Add any other styles specific to the card-body here */
  }

  .booking-request-card .approve-btn,
  .booking-request-card .reject-btn {
    background-color: #4caf50;
    color: white;
    border: none;
    padding: 8px 16px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    border-radius: 4px;
    cursor: pointer;
  }

  .booking-request-card .reject-btn {
    background-color: #f44336;
    margin-left: 10px;
  }

  .booking-request-card .approve-btn:hover,
  .booking-request-card .reject-btn:hover {
    background-color: #45a049;
  }
</style>

<div class="booking-request-card">
  <div class="card-body">
    <% if booking.status == "pending"%>
      <%= button_to "Approve", approve_booking_path(booking), method: :patch, class: "approve-btn" %>
      <%= button_to "Reject", reject_booking_path(booking), method: :patch, class: "reject-btn" %>
    <% end %>
  </div>
</div>

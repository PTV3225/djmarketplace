<%= form_with(model: [@booking, @review], class: "form-horizontal") do |form| %>
  <div class="form-group">
    <%= form.label :comment, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.text_area :comment, class: "form-control", rows: 4 %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :rating, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= form.number_field :rating, class: "form-control", min: 1, max: 5 %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Submit Review", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
